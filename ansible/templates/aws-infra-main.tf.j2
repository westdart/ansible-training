# {{ ansible_managed }}

# Setup the core provider information.
provider "aws" {
  region  = var.region
}

# Obtain information on the execution agent (person)
module "aws-caller" {
  source = "{{ terraform_roles_dir }}/modules/aws-caller"
}

# Setup common tags to be set against created resources
locals {
  # Common tags to be assigned to all resources
  common_tags = {
    "InfraName"         = "{{ infra_name }}"
    "Owner"             = module.aws-caller.arn
    "User"              = module.aws-caller.user
    "Account"           = module.aws-caller.account_id
  }
}

# Create a public key reference in AWS for machines to accept
resource "aws_key_pair" "keypair" {
  key_name   = "{{ infra_name }}-sshkey"
  public_key = file(var.ssh-public-key-file)
}

{% if infra_create_cloud %}
# Setup IAM objects
module "aws-iam" {
  source      = "{{ terraform_roles_dir }}/modules/aws-iam"
  name        = "{{ infra_name }}"
  prefix      = "{{ infra_name }}-"
  common-tags = local.common_tags
}

# Create VPC and other cloud wide resources
module "aws-cloud" {
  source         = "{{ terraform_roles_dir }}/modules/aws-cloud"
  cloud_cidr     = "{{ cloud_cidr }}"
  cloud_name     = "{{ infra_description }}"
  common-tags    = local.common_tags
}

# Create environment subnets and route table associations
{% for subnet in envs %}
resource "aws_subnet" "{{ subnet['prefix'] }}_public_subnet" {
  vpc_id                  = {{ infra_vpc_id | default('module.aws-cloud.vpc-id') }}
  cidr_block              = "{{ subnet['subnet_cidr'] }}"
  availability_zone       = "{{ subnet['availability_zone'] }}"
  map_public_ip_on_launch = true
  depends_on              = ["module.aws-cloud"]
  tags = merge(
    local.common_tags,
    map(
      "Name", "{{ subnet['name'] }}",
      "Type", "Public",
      "infra_name", "{{ infra_name }}"
    )
  )
}
resource "aws_route_table_association" "{{ subnet['prefix'] }}_public_subnet_asoc" {
  subnet_id      = aws_subnet.{{ subnet['prefix'] }}_public_subnet.id
  route_table_id = module.aws-cloud.public_route_id
}

{% endfor %}

{% if use_aws_dns %}
# Setup cloud DNS zone
module "aws-dns" {
  source = "{{ terraform_roles_dir }}/modules/aws-dns"
  name = "Internal DNS"
  vpc-id = {{ infra_vpc_id | default('module.aws-cloud.vpc-id') }}
  zone-domain = "{{ infra_domain }}"
}
{% endif %}

// AWS secrets data
data "template_file" "terraform_secret_vars" {
  template = "${file("${path.cwd}/../../templates/terraform_secret_vars.yml.tpl")}"
  vars = {
    aws_access_key = "${module.aws-iam.application-user-access-key}"
    aws_secret_key = "${module.aws-iam.application-user-access-secret}"
  }
}

//  Create the ansible variable file for aws secrets.
resource "local_file" "terraform_secret_vars_yml" {
  content     = "${data.template_file.terraform_secret_vars.rendered}"
  filename = "${path.cwd}/terraform_secret_vars.yml"
}


{% endif %} {# infra_create_cloud #}

# Create custom security groups
{% for security_group in security_groups %}
resource "aws_security_group" "{{ security_group['name'] }}" {
  name        = "{{ security_group['name'] }}"
  description = "{{ security_group['description'] }}"
  vpc_id      = {{ infra_vpc_id | default('module.aws-cloud.vpc-id') }}

{% for ingress_rule in network_rules | select_from_array_of_dicts('name', security_group['network_rule_refs']) | json_query("[*].ingres_rules") | flatten %}
  ingress {
    from_port = "{{ ingress_rule['from_port']    | default("0") }}"
    to_port   = "{{ ingress_rule['to_port']      | default("0") }}"
    protocol  = "{{ ingress_rule['protocol']     | default("-1") }}"
    self      = {{ ingress_rule['self']          | default("true") }}
    cidr_blocks = {{ ingress_rule['cidr_blocks'] | default(envs | json_query("[?prefix=='" + security_group['env'] + "'].subnet_cidr")) | double_quote_string_array }}
  }

{% endfor %}

{% for egres_rule in network_rules | select_from_array_of_dicts('name', security_group['network_rule_refs']) | json_query("[*].egres_rules") | flatten %}
  egress {
    from_port = "{{ egres_rule['from_port']    | default("0") }}"
    to_port   = "{{ egres_rule['to_port']      | default("0") }}"
    protocol  = "{{ egres_rule['protocol']     | default("-1") }}"
    self      = {{ egres_rule['self']          | default("true") }}
    cidr_blocks = {{ egres_rule['cidr_blocks'] | default(envs | json_query("[?prefix=='" + security_group['env'] + "'].subnet_cidr")) | double_quote_string_array }}
  }

{% endfor %}
  tags = merge(
           local.common_tags,
           map(
             "Name", "{{ security_group['name'] }}",
             "infra_name", "{{ infra_name }}"
           )
         )
}

{% endfor %}

{% for image in images %}
# Establish AMIs to use
module "{{ image['name'] }}-images" {
  source      = "{{ terraform_roles_dir }}/modules/aws-images"
  account_num = "{{ image['account'] }}"
  os_name = "{{ image['filter'] }}"
}
{% endfor %}


{% if infra_create_cloud %}
{% set common_security_groups = ['module.aws-cloud.public-security-group', 'module.aws-cloud.ingres-security-group', 'module.aws-cloud.egres-security-group'] | join(',') %}
{% set common_instance_profile = 'module.aws-iam.sts-instance-profile-id' %}
{% else %}
{% set common_security_groups = infra_security_groups %}
{% set common_instance_profile = '"' + infra_instance_profile_id + '"' %}
{% endif %}

# Create all environment nodes
{% for env in envs %}
{% for node_group in env['node_groups'] %}
{% set root_bock_device_obj = machine_types[node_group['machine_type']]['root_block_device'] | default(root_block_device) %}

{% for machine_index in range(node_group['count'] | default('1')) %}
{% set machine_num = machine_index + 1 %}
{% if node_group['count'] == 1 %}
{%   set host_name = env['prefix'] + '-' + node_group['name'] + '.' + infra_domain %}
{% else %}
{%   set host_name = env['prefix'] + '-' + node_group['name'] + machine_num | string + '.' + infra_domain %}
{% endif %}
{% if infra_create_cloud %}
{% set common_subnet_id = "aws_subnet." + env['prefix'] + "_public_subnet.id" %}
{% else %}
{% set common_subnet_id = '"' + env['subnet_id'] + '"' %}
{% endif %}
resource "aws_instance" "{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}" {
  ami                    = module.{{ machine_types[node_group['machine_type']]['image'] }}-images.ami_id
  instance_type          = "{{ machine_types[node_group['machine_type']]['type'] }}"
  iam_instance_profile   = {{ common_instance_profile }}
  subnet_id              = {{ common_subnet_id }}
  vpc_security_group_ids = [{{ common_security_groups }},
                            {% for security_group in security_groups|json_query("[?env=='" + env['prefix'] +"']") %}{% if security_group['env'] == env['prefix'] %}aws_security_group.{{ security_group['name'] }}.id{% endif %}{% if not loop.last %},
                            {% endif %}{% endfor %}]
  key_name               = "{{ infra_name }}-sshkey"

  root_block_device {
    volume_size = {{ root_bock_device_obj['size'] }}
    volume_type = "{{ root_bock_device_obj['type'] }}"
  }

{% if node_group['machine_type'] in machine_types and machine_types[node_group['machine_type']]['block_devices'] | length > 0 %}
  dynamic "ebs_block_device" {
    for_each = [
{% for block_device in machine_types[node_group['machine_type']]['block_devices'] %}
      {
        device_name = "{{ block_device['device'] }}"
        volume_size = {{ block_device['size'] }}
        volume_type = "{{ block_device['type'] }}"
      }{{ ',' if not loop.last else '' }}
{% endfor %}
    ]
    content {
      device_name = ebs_block_device.value.device_name
      volume_size = ebs_block_device.value.volume_size
      volume_type = ebs_block_device.value.volume_type
    }
  }
{% endif %}

  tags = merge(
    local.common_tags,
    map(
      "Name", "{{ host_name }}"
    )
  )
}

{% if use_aws_dns %}
resource "aws_route53_record" "{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}_a-record" {
  zone_id = module.aws-dns.zone-id
  name    = {{ host_name }}
  type    = "A"
  ttl     = 300
  records = [
      aws_instance.instance_{{ machine_num }}.private_ip
  ]
}
{% endif %}

{% if 'external_ip' in machine_types[node_group['machine_type']] and machine_types[node_group['machine_type']]['external_ip'] %}
// Get elastic IP for server if required.
resource "aws_eip" "{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}_instance_eip" {
  instance = aws_instance.{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}.id
  vpc      = true
  tags = merge(
    local.common_tags,
    map(
      "Name", "{{ host_name }}"
    )
  )
}
{% endif %}
{% endfor %}

{% endfor %}

{% endfor %}

// Collect together all of the output variables required downstream

// AWS exposed data
data "template_file" "terraform_exposed_vars" {
  template = "${file("${path.cwd}/terraform_exposed_vars.yml.tpl")}"
  vars = {
{% for env in envs %}
{% for node_group in env['node_groups'] %}
    {{ env['prefix'] }}_{{ node_group['name'] }}_addresses = "
{%- set mach_count = machine_types[node_group['machine_type']]['count'] | default('1') -%}
    {% for i in range(mach_count | int) %}
{% set machine_num = i + 1 %}
'${aws_instance.{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}.private_dns}'
{%- if not loop.last -%},{%- endif -%}
{%- endfor -%}"
{% if 'external_ip' in machine_types[node_group['machine_type']] and machine_types[node_group['machine_type']]['external_ip'] == 'true' %}
    {{ env['prefix'] }}_{{ node_group['name'] }}_eips = "
{%- set mach_count = machine_types[node_group['machine_type']]['count'] | default('1') -%}
    {% for i in range(mach_count | int) %}
'${aws_eip.{{ env['prefix'] }}_{{ node_group['name'] }}_instance_{{ machine_num }}_instance_eip.public_ip}'
{%- if not loop.last -%},{%- endif -%}
{%- endfor -%}"
{% endif %}
{% endfor %}
{% endfor %}
  }
}

//  Create the ansible variable file for aws secrets.
resource "local_file" "terraform_exposed_vars_yml" {
  content  = "${data.template_file.terraform_exposed_vars.rendered}"
  filename = "${path.cwd}/terraform_exposed_vars.yml"
}
